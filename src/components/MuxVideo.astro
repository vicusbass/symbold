---
import { MuxPlayer } from '@mux/mux-player-astro';

interface Props {
  playbackId: string;
  videoTitle: string;
  mobileAspectRatio?: boolean;
}

const { playbackId, videoTitle, mobileAspectRatio = false } = Astro.props;
---

<MuxPlayer
  playbackId={playbackId}
  metadata={{
    video_title: videoTitle,
  }}
  style={{
    display: 'block',
    aspectRatio: mobileAspectRatio ? '1/1' : '16/9',
    '--controls': 'none',
  }}
  autoplay={true}
  muted={true}
  loop={true}
  nohotkeys={true}
  defaultHiddenCaptions={true}
  streamType="on-demand"
/>
