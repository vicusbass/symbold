---
interface Props {
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  class?: string;
}

const { href, type = 'button', class: className = '' } = Astro.props;
const Element = href ? 'a' : 'button';
---

<Element
  href={href}
  type={!href ? type : undefined}
  class={`btn-primary inline-block ${className}`}
>
  <slot />
</Element>
