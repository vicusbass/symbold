---
interface Props {
  delay?: number;
  class?: string;
}

const { delay = 500, class: className = '' } = Astro.props;
---

<div class="overflow-hidden">
  <div class={`baseline-scroll ${className}`} data-baseline-animation data-delay={delay}>
    <slot />
  </div>
</div>

<script>
  document.addEventListener('astro:page-load', () => {
    document
      .querySelectorAll('[data-baseline-animation]')
      .forEach((el) => el.classList.add('visible'));
  });
</script>
