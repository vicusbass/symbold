---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ClientRouter } from 'astro:transitions';
import SpeedInsights from '@vercel/speed-insights/astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  keywords?: string;
  type?: 'website';
  author?: string;
}

const {
  title = 'Symbold - Brutally Honest Branding Agency | Strategic Brand Design',
  description = 'We create conceptual, ambitious, and profound brand identities. Strategic branding, graphic design, web design, and digital experiences for visionary businesses in Romania and beyond.',
  image = '/OG.jpg',
  keywords = 'branding agency, brand identity, graphic design, web design, logo design, strategic branding, Romania branding, Cluj design agency, Bucharest design agency, brand strategy, visual identity',
  type = 'website',
  author = 'Symbold',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL(image, Astro.site);
const siteName = 'Symbold';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/32.svg" />
    <link rel="apple-touch-icon" href="/192.svg" />
    <link rel="icon" type="image/svg+xml" sizes="180x180" href="/180.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="English" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Geographic Tags -->
    <meta name="geo.region" content="RO" />
    <meta name="geo.placename" content="Romania" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={title} />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />
    <meta name="twitter:image:alt" content={title} />

    <!-- WhatsApp specific -->
    <meta property="og:image:secure_url" content={ogImageURL} />
    <meta property="og:site_name" content={siteName} />

    <!-- Additional SEO -->
    <meta name="theme-color" content="#000000" />
    <meta name="format-detection" content="telephone=no" />

    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://use.typekit.net" crossorigin />
    <link rel="preconnect" href="https://cdn.sanity.io" crossorigin />
    <link rel="dns-prefetch" href="https://use.typekit.net" />
    <link rel="dns-prefetch" href="https://cdn.sanity.io" />

    <!-- Fonts -->
    <link rel="stylesheet" href="https://use.typekit.net/smx5jap.css" crossorigin />

    <!-- JSON-LD Structured Data -->
    <script
      type="application/ld+json"
      is:inline
      set:html={JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'Organization',
        name: 'Symbold',
        description: 'Brutally honest branding agency creating strategic brand identities',
        url: Astro.site,
        logo: new URL('/32.svg', Astro.site),
        sameAs: [
          'https://www.facebook.com/symboldstudio/',
          'https://www.linkedin.com/company/symboldstudio/',
          'https://www.instagram.com/symboldbrands/',
        ],
        contactPoint: {
          '@type': 'ContactPoint',
          contactType: 'Customer Service',
          availableLanguage: ['English', 'Romanian'],
        },
        address: {
          '@type': 'PostalAddress',
          addressCountry: 'RO',
        },
      })}
    />

    <ClientRouter />
  </head>
  <body class="flex min-h-screen flex-col">
    <Header transition:persist />
    <main class="flex-1">
      <slot />
    </main>
    <Footer transition:persist />
    <SpeedInsights />
  </body>
</html>
